<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- link rel="icon" href="../../favicon.ico" -->

    <title><%= title %></title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- Custom styles for this template -->
    <link rel='stylesheet' href='/css/style.css' />

</head>

<body>
<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <h1 style="margin-left:10px" class="h2">Channels: </h1>
            <div class="sidebar-sticky pt-3">
                <ul class="nav flex-column">
                    <% services.forEach(function (service) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="<%= service.e2servicereference %>" channel="<%= service.e2servicename %>" >
                                <%= service.e2servicename %>
                            </a>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </nav>
    </div>
</div>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 channel">&nbsp</h1>
    </div>
    <div id='video'>
        <video id='player' style="width:100%" src="/stream/stream.m3u8" controls autoplay></video>
    </div>
</main>

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="/js/jquery.min.js"></script>
<script src="/js/underscore.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/socket.io.js"></script>

<script src="/js/load.js"></script>

</body>
</html>